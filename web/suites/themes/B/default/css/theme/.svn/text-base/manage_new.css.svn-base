	}
.cmRight-con{ 
	width:969px;
	height:400px;
	margin:40px auto 0;
	}
.cmRight-con ul,.cmRight-con .SKU,.cmRight-con .PP{
	width:500px;
	height:auto;
	margin:0 auto;
	}
.cmRight-con ul li,.cmRight-con .sku{
	width:400px;
	height:37px;
	margin:10px 0 0 0;
	text-align:left;
	}
.cmRight-con p{ display:inline-block; line-height:37px;}

.cmRight-con .p1,.cmRight-con .skuBtu,.cmRight-con .pSelect{ 
	width:266px; 
	height:35px; 
	border:1px solid #ccc; 
	float:right;
	}
.cmRight-con .pSelect{
	width:268px;
	height:37px;
	border-radius:2px;
	font-family:Microsoft YaHei; 
	font-size:12px;
	color:#aaa;
	 }
.cmRight-con .ADD{ position:relative;
	right:0;
	top:0;
	}
.cmRight-con .add{
	width:105px;
	height:37px;
	line-height:37px;
	background:#72c312;
	border-radius:2px;
	text-align:center;
	position:absolute;
	top:0;
	right:-115px;
	}
.cmRight-con .add a{
	color:#fff;
	font-size:16px;
	}
.cmRight-con .skuBtu{
	text-align:center;
	line-height:30px;
	background:#72c312;
	height:30px;
	color:#fff;
	border-radius:2px;
	}
.cmRight-con .pp{
	width:400px;
	height:44px;
	margin:35px 0 0 0;
	}
.cmRight-con .pp .p2{
	width:266px;
	height:44px;
	line-height:44px;
	color:#fff;
	background:#72c312;
	float:right;
	font-size:18px;
	border-radius:2px;
	}